# Environment variables for People AI Platform
# Copy this file and update with your actual API keys

# OpenAI API Key for LLM queries
OPENAI_API_KEY=your_openai_api_key_here

# Database Configuration (for production)
DATABASE_URL=postgresql://username:password@localhost:5432/people_ai_db

# JWT Secret for authentication
JWT_SECRET=your_jwt_secret_here

# API Configuration
API_BASE_URL=http://localhost:3000/api

# Model Configuration
ML_MODEL_VERSION=v1.2
CHURN_PREDICTION_THRESHOLD=0.5

# Feature Flags
ENABLE_REAL_TIME_PREDICTIONS=true
ENABLE_BATCH_PROCESSING=true
ENABLE_AUDIT_LOGGING=true
